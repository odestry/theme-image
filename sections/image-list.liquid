<section
  class="grid items-center py-[calc(var(--spacing)*0.75)] lg:py-[--spacing]"
  style="--spacing: {{ section.settings.spacing }}px">
  <div class="container mx-auto px-4 flex flex-col gap-4 md:gap-6">
    {% liquid
      assign image = section.settings.image

      if section.settings.use_product_image and collections.all.products.size > 0
        assign image = collections.all.products.first.featured_image
      endif
    %}
    {% render 'image' with image, class: 'h-[50vh] lg:h-[30rem]', preload: true %}
    <h1 class="max-w-xl scroll-m-20 text-4xl font-medium tracking-tight lg:text-5xl">
      {{ section.settings.heading }}
    </h1>
    <p class="max-w-prose text-xl text-gray-500">
      {{ section.settings.text }}
    </p>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 items-start gap-4 md:gap-5">
      {% liquid
        assign image = section.settings.image
        assign lazyload = false

        if section.settings.use_product_image and collections.all.products.size > 0
          assign image = collections.all.products.last.featured_image
        endif

        for index in (1..section.settings.number_of_images)
          if forloop.index > 3
            assign lazyload = true
          endif

          render 'image' with image, lazyload: lazyload
        endfor
      %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Image List",
  "settings": [
    {
      "type": "range",
      "id": "number_of_images",
      "min": 1,
      "max": 50,
      "step": 1,
      "label": "Number of images",
      "default": 12
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "checkbox",
      "id": "use_product_image",
      "label": "Use product image",
      "default": true
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Theme image template by Odestry"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "An attempt to create the product perfect image for commerce storefronts."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Get Started"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "range",
      "id": "spacing",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Vertical Spacing",
      "default": 48
    }
  ],
  "presets": [
    {
      "name": "Image List"
    }
  ]
}
{% endschema %}
